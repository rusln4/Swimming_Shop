<Page x:Class="Swimming_Shop_App.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage">
    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="#F6FBFF"/>
            <Setter Property="BorderBrush" Value="#C8E6FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="#F6FBFF"/>
            <Setter Property="BorderBrush" Value="#C8E6FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="0,18,0,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#0E7AC3" Offset="0"/>
                        <GradientStop Color="#00C2FF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#0E7AC3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Page.Resources>

    <Grid HorizontalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Stretch">
            <TextBlock Text="Swimming Shop" FontSize="24" FontWeight="Bold" Foreground="#0E7AC3"/>
            <TextBlock Text="Добро пожаловать! Войдите в аккаунт." Margin="0,4,0,16" Foreground="#477EA8"/>

            <TextBlock Text="Email" Margin="0,10,0,0" Foreground="#477EA8"/>
            <TextBox x:Name="EmailTextBox"/>

            <TextBlock Text="Пароль" Margin="0,10,0,0" Foreground="#477EA8"/>
            <PasswordBox x:Name="PasswordBox"/>

            <CheckBox Content="Скрыть/Показать пароль" Margin="0,10,0,0" Foreground="#477EA8"/>

            <Button Content="Войти" Click="Login_Click"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                <TextBlock Text="Нет аккаунта?" Foreground="#477EA8" Margin="0,0,6,0"/>
                <TextBlock>
                    <Hyperlink Click="OpenRegister_Click" Foreground="#0E7AC3">Зарегистрироваться</Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>