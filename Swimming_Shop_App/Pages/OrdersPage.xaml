<Page x:Class="Swimming_Shop_App.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заказы">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Заказы"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,12"/>

        <!-- Панель фильтров -->
        <Border Grid.Row="1"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                CornerRadius="6"
                Padding="10"
                Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <!-- Номер заказа -->
                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="Номер заказа" FontWeight="SemiBold"/>
                    <TextBox x:Name="OrderSearchBox"
                             Width="180"
                             Height="28"
                             Margin="0,4,0,0"
                             ToolTip="Введите номер заказа"/>
                </StackPanel>

                <!-- Статус -->
                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="Статус" FontWeight="SemiBold"/>
                    <ComboBox x:Name="StatusFilter"
                              Width="160"
                              Height="28"
                              Margin="0,4,0,0">
                        <ComboBoxItem Content="Все" IsSelected="True"/>
                        <ComboBoxItem Content="Новый"/>
                        <ComboBoxItem Content="В обработке"/>
                        <ComboBoxItem Content="Отправлен"/>
                        <ComboBoxItem Content="Доставлен"/>
                        <ComboBoxItem Content="Отменен"/>
                    </ComboBox>
                </StackPanel>

                <!-- Даты -->
                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="Период" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <DatePicker x:Name="FromDate" Width="140"/>
                        <TextBlock Text="—" Margin="8,0" VerticalAlignment="Center"/>
                        <DatePicker x:Name="ToDate" Width="140"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопки (заглушки) -->
                <StackPanel>
                    <TextBlock Text="Действия" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <Button Content="Обновить" Padding="12,4" />
                        <Button Content="Сбросить" Padding="12,4" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Список заказов -->
        <Border Grid.Row="2"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                CornerRadius="6">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="8">
                    <!-- Пустое состояние -->
                    <StackPanel x:Name="EmptyOrdersPanel"
                                Margin="0,40,0,0"
                                HorizontalAlignment="Center">
                        <TextBlock Text="Заказов пока нет"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Оформите заказ в каталоге — он появится здесь."
                                   Margin="0,8,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Элементы заказов -->
                    <ItemsControl x:Name="OrdersList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#EEEEEE"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="10"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="140"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Информация -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding OrderNumber}" FontSize="16" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding OrderDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                                                       Foreground="#666" Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <!-- Статус -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Status}"
                                                       Padding="8,4"
                                                       HorizontalAlignment="Left"
                                                       Background="#F3F4F6"
                                                       Foreground="#333"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <!-- Итог -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="Итого" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Total, StringFormat={}{0} ₽}" FontSize="16" FontWeight="Bold"/>
                                        </StackPanel>

                                        <!-- Действия -->
                                        <StackPanel Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                                            <Button Content="Подробнее" Padding="12,6"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>