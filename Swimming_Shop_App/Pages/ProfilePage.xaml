<Page x:Class="Swimming_Shop_App.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Профиль">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="#f8f9fa" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="👤" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Мой профиль" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                    <!-- Кнопка выхода -->
                    <Button x:Name="LogoutButton"
                            Content="Выйти"
                            Click="LogoutButton_Click"
                            Margin="20,0,0,0"
                            Padding="16,6"
                            Background="#dc3545"
                            Foreground="White"
                            BorderBrush="#dc3545"
                            HorizontalAlignment="Right"/>
                </StackPanel>
            </Border>

            <!-- Основной контент -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая колонка - Информация о пользователе -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" 
                        BorderBrush="#e9ecef" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Информация о пользователе" FontSize="18" FontWeight="SemiBold" 
                                   Margin="0,0,0,20" Foreground="#495057"/>

                        <!-- Email (только для чтения) -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Email:" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#6c757d" Margin="0,0,0,5"/>
                            <Border Background="#f8f9fa" CornerRadius="4" Padding="12,8">
                                <TextBlock x:Name="EmailText" FontSize="14" Foreground="#495057"/>
                            </Border>
                            <TextBlock Text="Email нельзя изменить" FontSize="10" 
                                       Foreground="#6c757d" Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Телефон (только для чтения) -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Телефон:" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#6c757d" Margin="0,0,0,5"/>
                            <Border Background="#f8f9fa" CornerRadius="4" Padding="12,8">
                                <TextBlock x:Name="PhoneText" FontSize="14" Foreground="#495057"/>
                            </Border>
                            <TextBlock Text="Телефон нельзя изменить" FontSize="10" 
                                       Foreground="#6c757d" Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Роль пользователя -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Роль:" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#6c757d" Margin="0,0,0,5"/>
                            <Border Background="#e7f3ff" CornerRadius="4" Padding="12,8">
                                <TextBlock x:Name="RoleText" FontSize="14" Foreground="#0d6efd" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Правая колонка - Редактирование профиля -->
                <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="20" 
                        BorderBrush="#e9ecef" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Редактирование профиля" FontSize="18" FontWeight="SemiBold" 
                                   Margin="0,0,0,20" Foreground="#495057"/>

                        <!-- Имя -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Имя:" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#6c757d" Margin="0,0,0,5"/>
                            <TextBox x:Name="FirstNameBox" FontSize="14" Padding="12,8" 
                                     BorderBrush="#ced4da" BorderThickness="1"/>
                        </StackPanel>

                        <!-- Фамилия -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Фамилия:" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#6c757d" Margin="0,0,0,5"/>
                            <TextBox x:Name="LastNameBox" FontSize="14" Padding="12,8" 
                                     BorderBrush="#ced4da" BorderThickness="1"/>
                        </StackPanel>

                        <!-- Адрес -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Адрес:" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#6c757d" Margin="0,0,0,5"/>
                            <TextBox x:Name="AddressBox" FontSize="14" Padding="12,8" 
                                     BorderBrush="#ced4da" BorderThickness="1" 
                                     AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>
                        </StackPanel>

                        <!-- Новый пароль -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Новый пароль:" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#6c757d" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="NewPasswordBox" FontSize="14" Padding="12,8" 
                                         BorderBrush="#ced4da" BorderThickness="1"/>
                            <TextBlock Text="Оставьте пустым, если не хотите менять пароль" FontSize="10" 
                                       Foreground="#6c757d" Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Кнопки -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="CancelButton" Content="Отмена" 
                                    Click="CancelButton_Click"
                                    Padding="20,8" Margin="0,0,10,0"
                                    Background="#6c757d" Foreground="White" 
                                    BorderBrush="#6c757d" FontWeight="SemiBold"/>
                            <Button x:Name="SaveButton" Content="Сохранить изменения" 
                                    Click="SaveButton_Click"
                                    Padding="20,8"
                                    Background="#28a745" Foreground="White" 
                                    BorderBrush="#28a745" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Индикатор загрузки -->
            <Border x:Name="LoadingOverlay" Grid.RowSpan="2" 
                    Background="#80000000" CornerRadius="8" 
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="⏳" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Загрузка..." FontSize="16" Foreground="White" 
                               HorizontalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
