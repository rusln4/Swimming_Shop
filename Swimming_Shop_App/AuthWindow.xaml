<Window x:Class="Swimming_Shop_App.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Swimming Shop — Авторизация"
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SeaGradient}">
    <Window.Resources>
        <LinearGradientBrush x:Key="SeaGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0E7AC3" Offset="0"/>
            <GradientStop Color="#00C2FF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Color="#33000000"/>
        </Grid.Effect>

        <Border CornerRadius="16"
                Background="White"
                Padding="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="820"
                MinWidth="820">
            <Frame x:Name="ContentFrame"
                   NavigationUIVisibility="Hidden"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"/>
        </Border>
    </Grid>
</Window>